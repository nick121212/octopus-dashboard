{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": false,
        "module": "amd",
        "removeComments": false,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "public/bower_components",
        "public/app/common/directives/schemaform-material",
        "servers",
        "typings",
        "bin",
        "config",
        "controllers",
        "db",
        "models",
        "node_modules",
        "routes"
    ],
    "compileOnSave": true,
    "buildOnSave": true
}